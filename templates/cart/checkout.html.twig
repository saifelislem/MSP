    <script>
        // Variables globales
        let currentCustomer = null;
        let customerAddresses = [];

        // Charger le résumé de commande
        function loadOrderSummary() {
            fetch('/cart/count')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('order-summary').innerHTML = `
                        <div class="d-flex justify-content-between mb-2">
                            <span>Articles (${data.count})</span>
                            <span>${data.total.toFixed(2)}€</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Livraison</span>
                            <span>Gratuite</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total</span>
                            <span>${data.total.toFixed(2)}€</span>
                        </div>
                    `;
                });
        }

        // Basculer l'affichage de l'adresse de livraison
        function toggleShippingAddress() {
            const sameAsBilling = document.getElementById('sameAsBilling').checked;
            const shippingForm = document.getElementById('shipping-address-form');
            
            if (sameAsBilling) {
                shippingForm.style.display = 'none';
                // Retirer les attributs required des champs de livraison
                shippingForm.querySelectorAll('input[required]').forEach(input => {
                    input.removeAttribute('required');
                });
            } else {
                shippingForm.style.display = 'block';
                // Ajouter les attributs required aux champs obligatoires
                ['shippingName', 'shippingStreet', 'shippingPostalCode', 'shippingCity'].forEach(fieldId => {
                    document.getElementById(fieldId).setAttribute('required', 'required');
                });
            }
        }

        // Afficher le formulaire de nouvelle adresse
        function showNewAddressForm(type) {
            document.getElementById(`${type}-address-form`).style.display = 'block';
        }

        // Valider les champs obligatoires
        function validateRequiredFields() {
            const requiredFields = [
                'customerName', 'customerEmail', 'customerPhone',
                'billingName', 'billingStreet', 'billingPostalCode', 'billingCity'
            ];

            // Ajouter les champs de livraison si nécessaire
            if (!document.getElementById('sameAsBilling').checked) {
                requiredFields.push('shippingName', 'shippingStreet', 'shippingPostalCode', 'shippingCity');
            }

            let isValid = true;
            const errors = {};

            // Effacer les erreurs précédentes
            document.querySelectorAll('.error-message').forEach(el => el.textContent = '');
            document.querySelectorAll('.form-control').forEach(el => el.classList.remove('is-invalid'));

            requiredFields.forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (!field || !field.value.trim()) {
                    isValid = false;
                    errors[fieldId] = 'Ce champ est obligatoire';
                    if (field) {
                        field.classList.add('is-invalid');
                        const errorEl = document.getElementById(`${fieldId}-error`);
                        if (errorEl) errorEl.textContent = errors[fieldId];
                    }
                }
            });

            // Validation spécifique de l'email
            const email = document.getElementById('customerEmail').value;
            if (email && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                isValid = false;
                errors.customerEmail = 'Email invalide';
                document.getElementById('customerEmail').classList.add('is-invalid');
                document.getElementById('customerEmail-error').textContent = errors.customerEmail;
            }

            // Validation du téléphone
            const phone = document.getElementById('customerPhone').value;
            if (phone && !/^[0-9\s\-\+\(\)\.]{10,}$/.test(phone)) {
                isValid = false;
                errors.customerPhone = 'Numéro de téléphone invalide';
                document.getElementById('customerPhone').classList.add('is-invalid');
                document.getElementById('customerPhone-error').textContent = errors.customerPhone;
            }

            // Validation du code postal
            ['billingPostalCode', 'shippingPostalCode'].forEach(fieldId => {
                const field = document.getElementById(fieldId);
                if (field && field.value && !/^\d{5}$/.test(field.value)) {
                    isValid = false;
                    errors[fieldId] = 'Le code postal doit contenir 5 chiffres';
                    field.classList.add('is-invalid');
                    const errorEl = document.getElementById(`${fieldId}-error`);
                    if (errorEl) errorEl.textContent = errors[fieldId];
                }
            });

            return { isValid, errors };
        }

        // Soumettre la commande
        function submitOrder() {
            const validation = validateRequiredFields();
            
            if (!validation.isValid) {
                alert('Veuillez remplir tous les champs obligatoires correctement.');
                return;
            }

            // Préparer les données de la commande
            const orderData = {
                customerName: document.getElementById('customerName').value,
                customerEmail: document.getElementById('customerEmail').value,
                customerPhone: document.getElementById('customerPhone').value,
                notes: document.getElementById('notes').value,
                billingAddress: {
                    name: document.getElementById('billingName').value,
                    company: document.getElementById('billingCompany').value,
                    street: document.getElementById('billingStreet').value,
                    additionalInfo: document.getElementById('billingAdditionalInfo').value,
                    postalCode: document.getElementById('billingPostalCode').value,
                    city: document.getElementById('billingCity').value,
                    country: document.getElementById('billingCountry').value
                }
            };

            // Adresse de livraison
            if (document.getElementById('sameAsBilling').checked) {
                orderData.shippingAddress = 'same_as_billing';
            } else {
                orderData.shippingAddress = {
                    name: document.getElementById('shippingName').value,
                    company: document.getElementById('shippingCompany').value,
                    street: document.getElementById('shippingStreet').value,
                    additionalInfo: document.getElementById('shippingAdditionalInfo').value,
                    postalCode: document.getElementById('shippingPostalCode').value,
                    city: document.getElementById('shippingCity').value,
                    country: document.getElementById('shippingCountry').value
                };
            }

            // Envoyer la commande
            fetch('/cart/create-order', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(orderData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Stocker l'ID de commande et rediriger vers le paiement
                    sessionStorage.setItem('orderId', data.orderId);
                    window.location.href = `/payment/create-checkout-session?orderId=${data.orderId}`;
                } else {
                    alert('Erreur lors de la création de la commande: ' + data.message);
                    if (data.errors) {
                        // Afficher les erreurs spécifiques
                        Object.keys(data.errors).forEach(field => {
                            const errorEl = document.getElementById(`${field}-error`);
                            if (errorEl) {
                                errorEl.textContent = data.errors[field];
                                document.getElementById(field).classList.add('is-invalid');
                            }
                        });
                    }
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Une erreur est survenue lors de la création de la commande.');
            });
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', function() {
            loadOrderSummary();
            
            // Validation en temps réel
            document.querySelectorAll('input, select, textarea').forEach(field => {
                field.addEventListener('blur', function() {
                    if (this.hasAttribute('required') && !this.value.trim()) {
                        this.classList.add('is-invalid');
                        const errorEl = document.getElementById(`${this.id}-error`);
                        if (errorEl) errorEl.textContent = 'Ce champ est obligatoire';
                    } else {
                        this.classList.remove('is-invalid');
                        const errorEl = document.getElementById(`${this.id}-error`);
                        if (errorEl) errorEl.textContent = '';
                    }
                });
            });
        });
    </script>

