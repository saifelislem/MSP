{% block javascripts %}
<script>
// Auto-refresh du dashboard toutes les 60 secondes
setInterval(() => {
    console.log('Auto-refresh du dashboard...');
    location.reload();
}, 60000); // 60 secondes

// Mettre Ã  jour le badge de temps
let startTime = new Date();
setInterval(() => {
    const now = new Date();
    const diff = Math.floor((now - startTime) / 1000);
    const badge = document.getElementById('dashboard-update');
    if (badge) {
        if (diff < 60) {
            badge.textContent = `Mise Ã  jour: il y a ${diff}s`;
        } else {
            badge.textContent = `Mise Ã  jour: il y a ${Math.floor(diff / 60)}min`;
        }
    }
}, 1000);
</script>
