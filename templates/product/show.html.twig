{% extends 'product.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-8 col-md-10 m-lr-auto">
            <div class="bor10 p-lr-40 p-t-30 p-b-40 m-lr-0-xl">
                <h4 class="mtext-109 cl2 p-b-30">Détails du produit #{{ product.id }}</h4>

                <div class="p-b-20">
                    <div class="flex-w flex-sb-m p-b-17">
                        <span class="stext-102 cl3">Texte:</span>
                        <span class="stext-110 cl2">{{ product.text }}</span>
                    </div>
                    <div class="flex-w flex-sb-m p-b-17">
                        <span class="stext-102 cl3">Largeur:</span>
                        <span class="stext-110 cl2">{{ product.largeur }} cm</span>
                    </div>
                    <div class="flex-w flex-sb-m p-b-17">
                        <span class="stext-102 cl3">Hauteur:</span>
                        <span class="stext-110 cl2">{{ product.hauteur }} cm</span>
                    </div>
                    <div class="flex-w flex-sb-m p-b-17">
                        <span class="stext-102 cl3">Type d'écriture:</span>
                        <span class="stext-110 cl2">{{ product.typeEcriture }}</span>
                    </div>
                </div>

                <div class="p-t-20">
                    <a href="{{ path('app_product_index') }}" class="flex-c-m stext-101 cl2 size-121 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-r-10 m-b-10">
                        <i class="zmdi zmdi-arrow-left m-r-5"></i> Retour à la liste
                    </a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer m-r-10 m-b-10">
                        <i class="zmdi zmdi-edit m-r-5"></i> Modifier
                    </a>
                    <form action="{{ path('app_cart_add', {'id': product.id}) }}" method="post" style="display: inline;">
                        <input type="hidden" name="quantity" value="1">
                        <input type="hidden" name="price" value="10.00">
                        <button type="submit" class="flex-c-m stext-101 cl0 size-121 bg1 bor1 hov-btn1 p-lr-15 trans-04 pointer m-b-10">
                            <i class="zmdi zmdi-shopping-cart m-r-5"></i> Ajouter au panier
                        </button>
                    </form>
                </div>

                <div class="p-t-20">
                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
