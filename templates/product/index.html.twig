{% extends 'product.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block content %}
    <div class="row p-b-30">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h3 class="mtext-111 cl2">Liste des Produits</h3>
            <a href="{{ path('app_product_new') }}" class="flex-c-m stext-101 cl0 size-101 bg3 bor1 hov-btn1 p-lr-15 trans-04">
                <i class="zmdi zmdi-plus m-r-5"></i> Nouveau Produit
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="bg3">
                        <tr>
                            <th class="stext-102 cl0 p-lr-15 p-tb-10">ID</th>
                            <th class="stext-102 cl0 p-lr-15 p-tb-10">Texte</th>
                            <th class="stext-102 cl0 p-lr-15 p-tb-10">Largeur</th>
                            <th class="stext-102 cl0 p-lr-15 p-tb-10">Hauteur</th>
                            <th class="stext-102 cl0 p-lr-15 p-tb-10">Type d'écriture</th>
                            <th class="stext-102 cl0 p-lr-15 p-tb-10">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td class="stext-104 cl3 p-lr-15 p-tb-10">{{ product.id }}</td>
                            <td class="stext-104 cl3 p-lr-15 p-tb-10">{{ product.text }}</td>
                            <td class="stext-104 cl3 p-lr-15 p-tb-10">{{ product.largeur }} cm</td>
                            <td class="stext-104 cl3 p-lr-15 p-tb-10">{{ product.hauteur }} cm</td>
                            <td class="stext-104 cl3 p-lr-15 p-tb-10">{{ product.typeEcriture }}</td>
                            <td class="p-lr-15 p-tb-10">
                                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm bg1 cl0 hov-btn1 p-lr-15 trans-04 m-r-5">
                                    <i class="zmdi zmdi-eye"></i> Voir
                                </a>
                                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm bg3 cl0 hov-btn1 p-lr-15 trans-04">
                                    <i class="zmdi zmdi-edit"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="stext-104 cl6 txt-center p-tb-20">Aucun produit trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
